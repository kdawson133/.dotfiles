#!/bin/bash
#  _       _                               __ ____ ____
# | |     | |                             /_ |___ \___ \
# | | ____| | __ ___      _____  ___  _ __ | | __) |__) |
# | |/ / _` |/ _` \ \ /\ / / __|/ _ \| '_ \| ||__ <|__ <
# |   < (_| | (_| |\ V  V /\__ \ (_) | | | | |___) |__) |
# |_|\_\__,_|\__,_| \_/\_/ |___/\___/|_| |_|_|____/____/
#
# https://github.com/kdawson133/
#
# @kirk133
#

CON=$HOME/.config

repos=(
    "$HOME/.dotfiles"
    "$CON/zsh/plugins/zsh-completions"
    "$CON/zsh/plugins/alias-tips"
    "$CON/zsh/plugins/extract"
    "$CON/zsh/plugins/zoxide"
    "$CON/zsh/plugins/zsh-autosuggestions"
    "$CON/zsh/plugins/zsh-syntax-highlighting"
)

echo ""

echo "Updating " ${#repos[@]} 

for repo in "${repos[@]}"
    do
         echo ""
         echo "****** Updating" ${repo} "******"
         cd "$repo"
         git pull
         echo "****** Done! ******"
    done
